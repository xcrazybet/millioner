rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC ACCESS FOR INITIAL SETUP
    match /setup/{document} {
      allow read, write: if true;
    }
    
    // ADMIN CREATION - Allow anyone to create first admin
    match /admins/{adminId} {
      // Allow create if no admin exists yet OR if you're creating yourself
      allow create: if 
        // Case 1: Creating first admin (no admins exist)
        (!exists(/databases/$(database)/documents/admins)) ||
        // Case 2: Creating your own admin account
        (request.auth != null && request.auth.uid == adminId) ||
        // Case 3: You're already an active admin
        (request.auth != null && 
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.active == true);
      
      // Allow read if you're an active admin
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.active == true;
      
      // Allow update if you're an active admin
      allow update: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.active == true;
    }
    
    // Helper function
    function isActiveAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.active == true;
    }
    
    // ALL OTHER COLLECTIONS - Require active admin
    match /wallets/{document=**} {
      allow read, write: if isActiveAdmin();
    }
    
    match /users/{document=**} {
      allow read, write: if isActiveAdmin();
    }
    
    match /deposit_requests/{document=**} {
      allow read, write: if isActiveAdmin();
    }
    
    match /deposits/{document=**} {
      allow read, write: if isActiveAdmin();
    }
    
    match /withdrawals/{document=**} {
      allow read, write: if isActiveAdmin();
    }
    
    match /transactions/{document=**} {
      allow read, write: if isActiveAdmin();
    }
    
    match /admin_logs/{document=**} {
      allow read, write: if isActiveAdmin();
    }
    
    // DENY ALL OTHER ACCESS
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
